name: Build & Release

on:
  push:
    tags:
      - 'v*'          # trigger only on version‑style tags, e.g. v1.0.0

permissions:
  contents: write      # required to create a release and upload assets

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v4

      - name: Install build tools
        run: |
          sudo apt-get update
          sudo apt-get install --needed cmake ninja gcc mingw-w64-gcc mingw-w64-crt mingw-w64-headers
          # sudo apt-get install -y build-essential

      - name: Compile
        run: |
          chmod +x build.sh && ./build.sh
          # mkdir -p build
          # gcc -O2 -Wall -o build/calculator main.c

      - name: Package binary
        run: |
          tar -C build -czf calculator-${{ github.ref_name }}-linux-amd64.tar.gz calculator

      - name: Create release and upload asset
        uses: softprops/action-gh-release@v2
        with:
          tag_name: ${{ github.ref }}                       # the tag that triggered the workflow
          name: Release ${{ github.ref_name }}
          generate_release_notes: true
          files: calculator-${{ github.ref_name }}-linux-amd64.tar.gz
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
